@model List<Book>
@{
    ViewBag.Title = "Books";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <style>
        .nav-item img {
            width: 15px;
            height: 15px;
        }
    </style>
    <title>Online Books</title>
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Home/Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <img src="~/imgs/icons8_books_52px.png" style="width: 50px;height: 50px;" />
                </div>
                <div class="sidebar-brand-text mx-3">Online Books</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/Home/Index">
                    <span>Home Page</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link" href="/Admin/CreateCategory">
                    <img src="~/imgs/icons8_add_100px_1.png" />
                    <span>Add Category</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/CreateBook">
                    <img src="~/imgs/icons8_add_100px_1.png" />
                    <span>Add Book</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/Categories">
                    <img src="~/imgs/icons8_menu_128px.png" />
                    <span>Categories</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/Books">
                    <img src="~/imgs/icons8_menu_128px.png" />
                    <span>Books</span>
                </a>
            </li>

            <li class="nav-item" data-toggle="modal" data-target="#exampleModalLong" style="cursor: pointer;">
                <div id="modalSearch" class="nav-link">
                    <img src="~/imgs/icons8_search_128px.png" />
                    <span>Search Books</span>
                </div>                
            </li>
        </ul>
        <!-- Content Wrapper -->
        <!-- End of Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" style="display: grid;justify-content: center;align-items: center;height: 90vh;">
                <h2 align="center" style="">Welcome Admin</h2>

                <div class="main-content">
                    <div class="books-section">
                        @{
                            foreach (Book book in Model)
                            {
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary"><a href="/Home/BooksCate/@book.id">@book.book_name</a></h6>
                                        <a target="_blank" href="/Admin/Download?file=@book.book_url">Download</a>
                                    </div>
                                    <div style="padding: 10px;">
                                        <h6>@book.Category.cate_name</h6>
                                        <a href="/Admin/DeleteBook?id=@book.id">Delete</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Online Books 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->    
    <div class="modal" tabindex="-1" role="dialog" id="exampleModalLong">
        <div class="modal-dialog" role="document">
            <form class="modal-content" method="get" action="/Admin/SearchBooks">
                <div class="modal-header">
                    <h5 class="modal-title">Search</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Search Using Name:</p>
                    <input class="form-control" type="text" name="book_name" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>



    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>
    <script>                
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })       
    </script>

</body>
</html>

